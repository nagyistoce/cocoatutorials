#!/usr/bin/perl

# use strict;
# use warnings;

# our module
use lib "$ENV{PWD}/";
use lib "$ENV{HOME}/bin/";
use Collage;

sub syntax
{
	error("usage: readcollage <collage.cxf> Width Height") ;
}

# the main program
#
my $filename = shift or syntax() ;
my $W		 = shift or syntax() ;
my $H		 = shift or syntax() ;

exit Collage::read($filename,$W,$H);

# That's all Folks
##
