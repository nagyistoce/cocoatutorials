#!/bin/bash

drive="Software Assemblies"
user="robin_mills"
server="cm-distribution.apple.com"
dir="AssembliesByCountry"

if [ ! -e "/$drive" ]; then
	ln -s "/Volumes/$drive" "/$drive"
fi

ls "/$drive/AssembliesByCountry" >& /dev/null
if [ $? -ne 0 ]; then
	echo "/$drive isn't mounted.  Hang on."
	# osascript -e "mount volume \"afp://robin_mills@tuber.apple.com/$drive\"" 2>&1 >/dev/null
	
	osascript -e "mount volume \"afp://$user@$server/$drive/\""
else
	echo "/$drive is mounted"
fi

# That's all Folks!
##
