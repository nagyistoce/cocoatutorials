##
# functions
dirXX() {
	# this if is here to remind me of the syntax !
	if [ -z "$22" ]; then 
	   echo usage: dir directory
	   return
	fi
	ls -alt "$1" "$2" "$3" "$4" "$5" "$6" "$7" "$8" "$9"
}

# alias dir="ls -dlth"

dir() { # it's impossible to like bash - the syntax is pure shit
	list='ls -dlth'
	if [ ${#*} -eq 0 ]; then
		$list *
	elif [ ${#*} -eq 1 ]; then
		if [ -d $1 ]; then
			$list $1/*
		else
			$list $*
		fi
	else
		$list $*
	fi
}

history() { 
	builtin history | tail -30
}

free() {
  df -m .
  # df -k . | tail -1 | cut -f4 -d ' '
}

dirs() {
	ls -hlt $1 | grep "^d"
}

links() {
	ls -alt $1 | grep "^l"
}

files() {
	ls -ahlt $1 | grep "^-"
}

socks() {
	ls -alt $1 | grep "^s"
}

diros() {
#	ls -ltG $* | leopardsort --key=5 --numeric-sort
	ls -ltG $* | tigersort +4 -n
}

diron() {
#	ls -ltG $* | leopardsort --key=9 --ignore-case
	ls -ltG $* | tigersort +8 -i
}

hidden() {
	ls -alht $1 | grep " \."
}
