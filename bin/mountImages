#!/bin/bash

drive="images"
user="$AUSER"
server="builds.apple.com"
dir="CDs/Zin"

if [[ ! -d "/$drive" || ! -e "/$drive" ]]; then
	ln -s "/Volumes/$drive" "/$drive" 2>&1 >/dev/null
fi

ls "/$drive/$dir" >& /dev/null
if [ $? -ne 0 ]; then
	echo "/$drive isn't mounted.  Hang on."
	# osascript -e "mount volume \"afp://robin_mills@tuber.apple.com/$drive\"" 2>&1 >/dev/null
	
	osascript -e "mount volume \"afp://$user@$server/$drive/\""
else
	echo "/$drive is mounted"
fi

# That's all Folks!
##
