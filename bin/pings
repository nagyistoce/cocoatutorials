#!/bin/bash

if [[ $# -eq 0  && ! -z $PINGS ]];then
	echo using environment string "\"PINGS=$PINGS\""
fi

if [ $# -ne 0 ];then
	PINGS="$@"
fi

if [ -z "$PINGS" ]; then
    echo "*** usage: pings [server]+ or set PINGS ***"
    exit 1
fi

echo pinging: $PINGS

for ping in $PINGS ; do
	result=alive
	ping -c 2 $ping 2>&1 > /dev/null
	st=$?
	if [ $st -ne 0 ]; then
		result=DEAD	
	fi
	echo $ping is $result
done

# That's all Folks!
##
