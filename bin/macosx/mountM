#!/bin/bash

V="/Volumes/mbpHD/"
v=/mbpHD
doit=0
if [ ! -e $V ]; then
	mkdir $V
	doit=1
fi

ls -alt $V 2>&1 >/dev/null
if [ $? != 0 ]; then 
	doit=1
fi

if [ $doit == 1 ]; then
    if [ ! -e $v ]; then
    	sudo ln -s $V $v
    fi
	mount_afp afp://rmills:Largs12%40@rmills-mbp/mbpHD $V
	# mount_afp -i afp://rmills-mbp/mbpHD "$V"/
else
	echo $v "already mounted"
fi

# That's all Folks!
##
